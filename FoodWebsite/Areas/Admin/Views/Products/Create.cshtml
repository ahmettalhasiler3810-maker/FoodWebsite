@model FoodWebsite.Models.Product
<link rel="stylesheet" href="/css/style.css" />
<section class="contact" id="create-product">
    <h1 class="heading">yeni <span>ürün</span></h1>
    <div class="row">
        <form asp-action="Create" method="post">
            <h3>Ürün Ekle</h3>
            <div class="inputBox">
                <i class="fas fa-utensils"></i>
                <input asp-for="Name" placeholder="Ürün Adı" class="search-input" required />
            </div>
            <div class="inputBox">
                <i class="fas fa-dollar-sign"></i>
                <input asp-for="Price" type="number" step="0.01" placeholder="Fiyat" class="search-input" required />
            </div>
            <div class="inputBox">
                <i class="fas fa-image"></i>
                <input asp-for="ImageUrl" placeholder="Resim URL" class="search-input" />
            </div>
            <div class="inputBox">
                <i class="fas fa-tags"></i>
                <input asp-for="Category" placeholder="Kategori" class="search-input" />
            </div>
            <input type="submit" class="btn" value="Ekle" />
        </form>
    </div>
</section>